<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:id="@+id/login_email_fragment"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:background="@color/color_FFFFFF">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/dp_35"
		android:layout_marginStart="@dimen/dp_35"
		android:layout_marginTop="@dimen/dp_225"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/login_phone_number_icon"
				android:layout_width="@dimen/dp_15"
				android:layout_height="@dimen/dp_22"
				android:layout_gravity="center_vertical"
				android:scaleType="fitCenter"
				android:src="@drawable/shouji"/>

			<EditText
				android:id="@+id/login_phone_number_et"
				style="@style/text_style_16sp_1A1A1A"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginStart="@dimen/dp_10"
				android:layout_weight="1"
				android:background="@null"
				android:gravity="center_vertical"
				android:hint="@string/login_input_phone_number"
				android:inputType="phone"
				android:maxLength="11"
				android:maxLines="1"
				android:paddingLeft="@dimen/dp_12"
				android:paddingRight="@dimen/dp_12"
				android:textColorHint="@color/color_CCCCCC"
				android:textCursorDrawable="@null">

				<requestFocus/>
			</EditText>
		</LinearLayout>

		<TextView
			style="@style/split_style_horizontal_match_parent_bg_1A1A1A"
			android:layout_marginTop="@dimen/dp_10"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_20"
			android:orientation="horizontal">

			<FrameLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/dp_10"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<ImageView
						android:id="@+id/login_verification_code_icon"
						android:layout_width="@dimen/dp_15"
						android:layout_height="@dimen/dp_22"
						android:layout_gravity="center_vertical"
						android:scaleType="fitCenter"
						android:src="@drawable/yanzm"/>

					<EditText
						android:id="@+id/login_verification_code_et"
						style="@style/text_style_16sp_1A1A1A"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginStart="@dimen/dp_10"
						android:background="@null"
						android:gravity="center_vertical"
						android:hint="@string/login_input_verification_code"
						android:inputType="number"
						android:maxLines="1"
						android:paddingLeft="@dimen/dp_12"
						android:paddingRight="@dimen/dp_12"
						android:textColorHint="@color/color_CCCCCC"
						android:textCursorDrawable="@null">
					</EditText>
				</LinearLayout>

				<TextView
					style="@style/split_style_horizontal_match_parent_bg_1A1A1A"
					android:layout_gravity="bottom"
					android:layout_marginTop="@dimen/dp_10"/>

			</FrameLayout>

			<Button
				android:id="@+id/login_obtain_verification_code_btn"
				style="@style/text_style_14sp_FFFFFF"
				android:layout_width="@dimen/dp_100"
				android:layout_height="@dimen/dp_42"
				android:background="@drawable/juxing_gray_small"
				android:text="@string/login_obtain_verification_code"/>

		</LinearLayout>

		<Button
			android:id="@+id/login_enter_btn"
			style="@style/text_style_16sp_FFFFFF"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_42"
			android:layout_marginTop="@dimen/dp_35"
			android:background="@drawable/juxing_gray_big"
			android:text="@string/login_enter"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="@dimen/dp_10"
			android:orientation="horizontal">

			<TextView
				style="@style/text_style_12sp_CCCCCC"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:includeFontPadding="false"
				android:text="@string/login_accept_agreement_hint"/>

			<TextView
				android:id="@+id/login_agreement_tv"
				style="@style/text_style_12sp_2B84C6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:includeFontPadding="false"
				android:text="@string/login_agreement"/>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>