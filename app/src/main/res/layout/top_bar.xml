<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<FrameLayout
		android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/color_2B84C6">

		<FrameLayout
			android:id="@+id/left_top_image_fl_on_bar"
			android:layout_width="@dimen/dp_36"
			android:layout_height="match_parent"
			android:visibility="gone">

			<ImageView
				android:layout_width="@dimen/dp_09"
				android:layout_height="@dimen/dp_16"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/dp_10"
				android:contentDescription="@string/image_left_top"
				android:scaleType="fitCenter"
				android:src="@drawable/arrow_white"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/left_top_image_fl_two_on_bar"
			android:layout_width="@dimen/dp_36"
			android:layout_height="match_parent"
			android:visibility="gone">

			<ImageView
				android:layout_width="@dimen/dp_18"
				android:layout_height="@dimen/dp_18"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/dp_10"
				android:contentDescription="@string/image_left_top"
				android:scaleType="fitCenter"
				android:src="@drawable/me"/>
		</FrameLayout>

		<TextView
			android:id="@+id/left_top_text_on_bar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:paddingEnd="12dp"
			android:paddingStart="12dp"
			android:text="@string/return_back"
			android:textColor="@color/color_FFFFFF"
			android:textSize="@dimen/pixel_16"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/title_on_bar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal"
			android:gravity="center_vertical"
			android:textColor="@color/color_FFFFFF"
			android:textSize="@dimen/pixel_18"
			android:visibility="gone"/>


		<TextView
			android:id="@+id/right_top_text_on_bar"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:gravity="center_vertical"
			android:paddingEnd="@dimen/dp_12"
			android:paddingStart="@dimen/dp_05"
			android:textColor="@color/color_FFFFFF"
			android:textSize="@dimen/pixel_16"
			android:visibility="gone"/>

		<FrameLayout
			android:id="@+id/right_top_image_fl_on_bar"
			android:layout_width="@dimen/dp_36"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:visibility="gone">

			<ImageView
				android:id="@+id/right_top_image_on_bar"
				android:layout_width="@dimen/dp_18"
				android:layout_height="@dimen/dp_18"
				android:layout_gravity="end|center_vertical"
				android:layout_marginEnd="@dimen/dp_10"
				android:contentDescription="@string/image_right_top"
				android:scaleType="fitCenter"/>
		</FrameLayout>

		<FrameLayout
			android:id="@+id/right_top_image_fl_two_on_bar"
			android:layout_width="@dimen/dp_36"
			android:layout_height="match_parent"
			android:layout_gravity="end"
			android:visibility="gone">

			<ImageView
				android:id="@+id/right_top_image_two_on_bar"
				android:layout_width="@dimen/dp_18"
				android:layout_height="@dimen/dp_18"
				android:layout_gravity="end|center_vertical"
				android:layout_marginEnd="@dimen/dp_10"
				android:contentDescription="@string/image_right_top"
				android:scaleType="fitCenter"/>
		</FrameLayout>
	</FrameLayout>

</merge>