<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:layout_gravity="center_horizontal"
			  android:background="@null"
			  android:minWidth="@dimen/dp_300">

	<LinearLayout
		android:layout_width="@dimen/dp_300"
		android:layout_height="match_parent"
		android:background="@drawable/radius_dialog_all_10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/notice_dialog_hint_tv"
			style="@style/text_style_16sp_1A1A1A"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/dp_12"/>

		<TextView
			style="@style/split_style_horizontal_match_parent_bg_CCCCCC"
			android:layout_gravity="top"/>

		<TextView
			android:id="@+id/notice_dialog_confirm_tv"
			style="@style/text_style_16sp_1A1A1A"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/dp_12"/>

	</LinearLayout>

</LinearLayout>