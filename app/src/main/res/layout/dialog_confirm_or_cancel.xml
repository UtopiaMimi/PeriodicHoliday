<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:layout_gravity="center_horizontal"
			 android:background="@null"
			 android:minWidth="@dimen/dp_300">

	<LinearLayout
		android:layout_width="@dimen/dp_300"
		android:layout_height="match_parent"
		android:background="@drawable/radius_dialog_all_10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/dialog_hint_tv"
			style="@style/text_style_16sp_1A1A1A"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center"
			android:padding="@dimen/dp_12"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_42">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/dialog_confirm_tv"
					style="@style/text_style_16sp_1A1A1A"
					android:layout_width="@dimen/dp_00"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/confirm"/>

				<TextView
					android:id="@+id/dialog_cancel_tv"
					style="@style/text_style_16sp_1A1A1A"
					android:layout_width="@dimen/dp_00"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center"
					android:text="@string/cancel"/>
			</LinearLayout>

			<!-- 分割线 -->

			<TextView
				style="@style/split_style_horizontal_match_parent_bg_CCCCCC"
				android:layout_gravity="top"/>

			<!-- 分割线 -->

			<TextView
				style="@style/split_style_vertical_match_bg_CCCCCC"
				android:layout_gravity="center"/>
		</FrameLayout>
	</LinearLayout>

</FrameLayout>