<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minWidth="@dimen/dp_280">

	<LinearLayout
		android:layout_width="@dimen/dp_280"
		android:layout_height="wrap_content"
		android:background="@drawable/radius_dialog_all_5dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dp_50"
			android:layout_gravity="center_horizontal"
			android:gravity="center_vertical">

			<TextView
				style="@style/text_style_16sp_1A1A1A"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/period_is"/>

			<EditText
				android:id="@+id/dialog_set_period_input_et"
				style="@style/text_style_16sp_2B84C6"
				android:layout_width="@dimen/dp_20"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/dp_05"
				android:layout_marginStart="@dimen/dp_05"
				android:background="@null"
				android:gravity="center"
				android:inputType="number"
				android:maxLength="2"/>

			<TextView
				style="@style/text_style_16sp_1A1A1A"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/day"/>
		</LinearLayout>

		<TextView
			style="@style/split_style_horizontal_match_parent_bg_CCCCCC"
			android:layout_gravity="top"/>

		<TextView
			android:id="@+id/dialog_set_period_confirm_tv"
			style="@style/text_style_16sp_1A1A1A"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dp_42"
			android:gravity="center"
			android:text="@string/confirm"/>
	</LinearLayout>

</LinearLayout>